<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/footballstadium"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/scoreLeft"
        android:layout_width="334dp"
        android:layout_height="378dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/leftColor"
        android:fontFamily="sans-serif"
        android:text="@string/score_text"
        android:textColor="@android:color/white"
        android:textSize="150sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/penaltiLeft"
        android:layout_width="157dp"
        android:layout_height="233dp"
        android:layout_marginStart="4dp"
        android:background="@color/leftColor"
        android:fontFamily="sans-serif"
        android:text="@string/score_text"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/scoreLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/penaltiRight"
        android:layout_width="157dp"
        android:layout_height="233dp"
        android:layout_marginEnd="4dp"
        android:background="@color/rightColor"
        android:fontFamily="sans-serif"
        android:text="@string/score_text"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toStartOf="@+id/scoreRight"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/scoreRight"
        android:layout_width="334dp"
        android:layout_height="378dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/rightColor"
        android:fontFamily="sans-serif"
        android:text="@string/score_text"
        android:textColor="@android:color/white"
        android:textSize="150sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonClear"
        android:layout_width="106dp"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/black"
        android:fontFamily="sans-serif"
        android:text="@string/clearBtn"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>